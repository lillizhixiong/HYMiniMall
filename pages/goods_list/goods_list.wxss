/* pages/goods_list/goods_list.wxss */

.goods-item {
  display: flex;
}

.goods-item {
  display: flex;
  border-bottom: 1px solid #ccc;
}

.goods-img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-img-wrap image {
  width: 70%;
}


.goods-info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}
.goods-info-wrap .goods-name{
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.goods-info-wrap .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
