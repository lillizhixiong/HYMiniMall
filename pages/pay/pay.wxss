page {
  padding-bottom: 90rpx;
}
.revice-address-row {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.user-info {
  flex: 5;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.user-phone {
  flex: 2;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.pay-title {
  font-size: 32rpx;
  padding: 20rpx;
  color: #666;
  border: 1rpx solid var(--themeColor);
}

.pay-item {
  display: flex;
  padding: 15rpx ;
  border-bottom: 1rpx solid #ccc;
}
.pay-item:last-child {
  border: 0;
}

.pay-item navigator {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay-item navigator image {
  width: 70%;
}

.goods-info-wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods-price-wrap {
  display: flex;
  justify-content: space-between;
}

.goods-name {
 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  font-size: 32rpx;
  color: var(--themeColor);
}

.goods-num {
  font-size: 26rpx;
  color: #666;
}



.pay-wrap {
  position: fixed;
  display: flex;
  border-top: 1rpx solid #ccc;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90rpx;
  background-color: #fff;
}

.totle-price-wrap {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.totle-price-text {
  font-size: 30rpx;
  color: var(--themeColor);
}
.order-pay-wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  background-color: var(--themeColor);
}